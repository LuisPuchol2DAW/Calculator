<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:columnCount="4"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/calculatorResult"
        style="@style/CalculatorResultStyle"
        android:layout_columnSpan="4"
        android:text="" />

    <Button
        android:id="@+id/buttonMS"
        style="@style/CalculatorButtonStyle"
        android:text="MS"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonMSPlus"
        style="@style/CalculatorButtonStyle"
        android:text="MS+"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonMSLess"
        style="@style/CalculatorButtonStyle"
        android:text="MS-"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonMC"
        style="@style/CalculatorButtonStyle"
        android:text="MC"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonMR"
        style="@style/CalculatorButtonStyle"
        android:text="MR"
        app:cornerRadius="@dimen/squareButtons" />
    <Button
        android:id="@+id/buttonBack"
        style="@style/CalculatorButtonStyle"
        android:text="&lt;--"
        app:cornerRadius="@dimen/squareButtons" />
    <Button
        android:id="@+id/buttonEraseAll"
        style="@style/CalculatorButtonStyle"
        android:text="C"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/CalculatorButtonStyle"
        android:layout_column="3"
        android:text="/"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button1"
        style="@style/CalculatorButtonStyle"
        android:text="1"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button2"
        style="@style/CalculatorButtonStyle"
        android:text="2"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button3"
        style="@style/CalculatorButtonStyle"
        android:text="3"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonMultiply"
        style="@style/CalculatorButtonStyle"
        android:text="*"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button4"
        style="@style/CalculatorButtonStyle"
        android:text="4"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button5"
        style="@style/CalculatorButtonStyle"
        android:text="5"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button6"
        style="@style/CalculatorButtonStyle"
        android:text="6"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonSubtract"
        style="@style/CalculatorButtonStyle"
        android:text="-"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button7"
        style="@style/CalculatorButtonStyle"
        android:text="7"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button8"
        style="@style/CalculatorButtonStyle"
        android:text="8"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button9"
        style="@style/CalculatorButtonStyle"
        android:text="9"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/CalculatorButtonStyle"
        android:layout_rowSpan="3"

        android:text="+"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button0"
        style="@style/CalculatorBorderButtonStyle"
        android:layout_columnSpan="2"
        android:text="0"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/button00"
        style="@style/CalculatorButtonStyle"
        android:text="00"
        app:cornerRadius="@dimen/squareButtons" />

    <Button
        android:id="@+id/buttonEquals"
        style="@style/CalculatorBorderButtonStyle"
        android:layout_columnSpan="3"
        android:text="="
        app:cornerRadius="@dimen/squareButtons" />


</GridLayout>